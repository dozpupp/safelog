{
    "manifest_version": 3,
    "name": "TrustKeys",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "trustkeys@safelog.hashpar.com",
            "strict_min_version": "109.0"
        }
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "externally_connectable": {
        "matches": [
            "*://safelog.hashpar.com/*",
            "http://localhost:5173/*"
        ]
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://safelog.hashpar.com/*",
                "http://localhost/*",
                "http://127.0.0.1/*"
            ],
            "js": [
                "src/content/index.js"
            ],
            "world": "ISOLATED"
        },
        {
            "matches": [
                "*://safelog.hashpar.com/*",
                "http://localhost/*",
                "http://127.0.0.1/*"
            ],
            "js": [
                "src/content/api_main.js"
            ],
            "world": "MAIN",
            "run_at": "document_start"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}